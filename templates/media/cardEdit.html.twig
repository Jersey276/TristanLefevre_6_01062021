<div class="col text-center">
    <div class="d-flex flex-row flex-md-column justify-content-end">
{% if media.getType.getName() == 'image' %}
    <div class="my-auto media-display position-relative">
        <img class="card-img-top btn-block" src="{{media.getPath()}}">
    </div>
{% elseif media.getType.getName() == 'video' %}
    <div class="my-auto media-display position-relative">
        <img class="card-img-top btn-block" src="{{media.getThumbnails()}}">
    </div>
{% endif %}

        <div class="mt-2 ms-auto border d-flex flex-row" id="media-{{ media.getId() }}">
            {% if media.getType.getName() == 'image' %}
                <button type="button" class="btn media-modify" data-media-id='{{ media.getId() }}' data-media-path='{{ media.getPath() }}' data-media-type="{{ media.getType.getId() }}">
            {% elseif media.getType.getName() == 'video' %}
                <button type="button" class="btn media-modify" data-media-id='{{ media.getId() }}' data-media-path='{{ media.getOriginalUrl() }}' data-media-type="{{ media.getType.getId() }}">
            {% endif %}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewbox="0 0 16 16">
