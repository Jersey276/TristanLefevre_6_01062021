<div class="col text-center">
{% if media.getType.getName() == 'image' %}
    <button class="btn p-0 media-display-btn" data-type="{{ media.getType.getName() }}" data-url="{{ media.getPath() }}">
        <div class="media-display">
            <img class="card-img-top btn-block" src="{{media.getPath()}}">
        </div>
{% elseif media.getType.getName() == 'video' %}
    <button class="btn p-0 media-display-btn" data-type="{{ media.getType.getName() }}" data-url="{{ media.getDisplayUrl() }}">
        <div class="my-auto media-display position-relative">
            <div class="position-absolute media-video-front">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-play-btn-fill" viewBox="0 0 16 16">
                    <path d="M0 12V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm6.79-6.907A.5.5 0 0 0 6 5.5v5a.5.5 0 0 0 .79.407l3.5-2.5a.5.5 0 0 0 0-.814l-3.5-2.5z"/>
                </svg>
            </div>
            <img class="card-img-top btn-block" src="{{media.getThumbnails()}}">
        </div>
{% endif %}
    </button>
</div>
