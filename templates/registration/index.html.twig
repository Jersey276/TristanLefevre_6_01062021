{% extends 'base.html.twig' %}

{% block title %}{% trans %}auth.register.title{% endtrans %}{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/css/auth.css">
{% endblock %}

{% block body %}
<div class="container centered auth-form">
    <h1 class="h3 mb-3 d-none d-md-block font-weight-normal text-center">{% trans %}auth.register.title{% endtrans %}</h1>
    <div class="border px-5 py-2 text-center">
        <h1 class="h3 mb-3 d-md-none font-weight-normal text-center">{% trans %}auth.register.title{% endtrans %}</h1>
        {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="d-flex flex-column align-items-center">
                <div class="form-group">
                {{ form_row(form.username) }}
                </div>
                <div class="form-group">
                {{ form_row(form.email) }}
                </div>
                <div class="form-group">
                {{ form_row(form.password) }}
                </div>
                {{ form_row(form.register) }}
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
